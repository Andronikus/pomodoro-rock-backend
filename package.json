{
  "name": "pomodoro-rock-backend",
  "version": "1.0.0",
  "description": "Backend for the Pomodoro app",
  "main": "server.js",
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve:debug": "nodemon --inspect dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon dist/server.js",
    "watch:test": "npm run test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andronikus/pomodoro-rock-backend.git"
  },
  "keywords": [
    "pomodoro",
    "tasks"
  ],
  "author": "Tiago Roque",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Andronikus/pomodoro-rock-backend/issues"
  },
  "homepage": "https://github.com/Andronikus/pomodoro-rock-backend#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/concurrently": "^5.2.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^26.0.14",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.10",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.5.3",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "mongoose": "^5.10.9",
    "winston": "^3.3.3"
  }
}

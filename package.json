{
  "name": "pomodoro-rock-backend",
  "version": "1.0.0",
  "description": "Backend for the Pomodoro app",
  "main": "server.js",
  "scripts": {
    "build": "npm run lint",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node src/server.js",
    "serve:debug": "nodemon --inspect src/server.js",
    "watch:node": "nodemon src/server.js",
    "watch:test": "npm run test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andronikus/pomodoro-rock-backend.git"
  },
  "keywords": [
    "pomodoro",
    "tasks"
  ],
  "author": "Tiago Roque",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Andronikus/pomodoro-rock-backend/issues"
  },
  "homepage": "https://github.com/Andronikus/pomodoro-rock-backend#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.6.1",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "winston": "^3.3.3"
  }
}
